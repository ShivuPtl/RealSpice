@model IEnumerable<MenuItem>

@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
 
@if (Model.Count() > 0)
{
    <div class="col-12 post @Model.FirstOrDefault().Category.Name.Replace(" ",string.Empty) menu-restaurant">
        <div class="row">
            <h3 class="text-success font-weight-bold ml-3">
                @Model.FirstOrDefault().Category.Name
            </h3>
        </div>
        
        @foreach (var item in Model)
        {
            <div class="border border-info rounded col-12" style="margin-top: 10px; margin-bottom: 10px; padding: 10px;">
                <div class="row">
                    <div class="col-md-3 col-sm-12">
                        <img src='@item.Image' width='99%' height='100%' style="border-radius: 5px; border:1px solid #bbb9b9"/>
                    </div>
                    <div class="col-md-9 col-sm-12">
                        <div class="row pr-3">
                            <div class="col-8">
                                <label class="text-primary font-weight-bold" style="font-size: 25px; color:maroon">@item.Name</label>
                                @if (item.Spicyness == "3")
                                {
                                    <span> <img src="images/verySpicy.png" height="30px"/></span>
                                }
                                else if (item.Spicyness == "2")
                                {
                                    <span> <img src="images/spicy.png" height="30px"/></span>
                                }
                                else if (item.Spicyness == "1")
                                {
                                    <span> <img src="images/mild.png" height="30px"/></span>
                                }
                            </div>
                            <div class="col-4">
                                <div class="float-right">
                                    <label class="font-weight-bold" style="font-size: 25px; color:maroon">₹ @item.Price</label>
                                </div>
                               
                            </div>
                        </div>
                        <div class="row col-12 text-justify d-none d-md-block">
                            <p>@Html.Raw(item.Description)</p>
                        </div>
                        <div class="col-md-3 col-sm-12 offset-md-9 text-center" >
                            <a asp-action="Details" class="btn btn-success form-control" asp-route-id="@item.Id">Details </a>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="p-4"></div>
    </div>
    
}